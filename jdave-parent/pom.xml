<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jdave</groupId>
  <artifactId>jdave-parent</artifactId>
  <packaging>pom</packaging>
  <version>1.1-SNAPSHOT</version>
  <name>jdave-parent</name>
  <url>http://maven.apache.org</url>
  <distributionManagement>
    <repository>
      <id>panda</id>
      <name>Laughing Panda</name>
      <url>scp://ssh.laughingpanda.org:/var/www/localhost/htdocs/maven2/</url>
    </repository>
  </distributionManagement>
  
  <scm>
    <connection>scm:svn:https://svn.laughingpanda.org/svn/jdave/trunk</connection>
    <developerConnection>scm:svn:https://svn.laughingpanda.org/svn/jdave/trunk</developerConnection>
  </scm>
  
  <modules>
    <module>../jdave-core</module>
    <module>../jdave-junit4</module>
    <module>../jdave-jemmy</module>
    <module>../jdave-wicket</module>
    <module>../jdave-wicket-selenium</module>
    <module>../jdave-wicket-webdriver</module>
    <module>../jdave-examples</module>
    <module>../jdave-report-plugin</module>
    <module>../jdave-scala</module>
    <module>../jdave-scala-suites</module>
    <module>../jdave-unfinalizer</module>
  </modules>
  
